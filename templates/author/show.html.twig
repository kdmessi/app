{% extends 'base.html.twig' %}

{% block title %}{{"Author"|trans}}{% endblock %}

{% block body %}
    <h1>{{"Author"|trans}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{"Id"|trans}}</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>{{"Name"|trans}}</th>
                <td>{{ author.name }}</td>
            </tr>
            <tr>
                <th>{{"Surname"|trans}}</th>
                <td>{{ author.surname }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('author_index') }}">{{"back to list"|trans}}</a>

    <a href="{{ path('author_edit', {'id': author.id}) }}">{{"edit"|trans}}</a>

    <a href="{{ path('author_delete',{'id': author.id}) }}">{{"delete"|trans}}</a>
{% endblock %}
