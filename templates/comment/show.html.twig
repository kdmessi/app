{% extends 'base.html.twig' %}

{% block title %}{{"Comment"|trans}}{% endblock %}

{% block body %}
    <h1>{{"Comment"|trans}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{"Id"|trans}}</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>{{"CreatedAt"|trans}}</th>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y/m/d') : '' }}</td>
            </tr>
            <tr>
                <th>{{"Content"|trans}}</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>{{"Email"|trans}}</th>
                <td>{{ comment.email }}</td>
            </tr>
            <tr>
                <th>{{"Nick"|trans}}</th>
                <td>{{ comment.nick }}</td>
            </tr>
        </tbody>
    </table>
    {% if app.user %}
    <a href="{{ path('comment_index') }}">{{"back to list"|trans}}</a>

    <a href="{{ path('comment_edit', {'id': comment.id}) }}">{{"edit"|trans}}</a>
    {% endif %}
    {{ include('comment/_delete_form.html.twig') }}
{% endblock %}
