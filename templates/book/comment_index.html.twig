<div class="comment">
    <div class="nav text-center">
        {{ knp_pagination_render(comments) }}
    </div>
    {% for comment in comments %}
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Nick: {{ comment.nick }}</h5>
                <h6 class="card-subtitle mb-2 text-muted">{{'Email'|trans}}:  {{ comment.email }}</h6>
                <p class="card-text">Comment: {{ comment.content }}</p>
                {% if app.user %}
                <a href="{{ path('comment_edit', {'id': comment.id}) }}" class="card-link">{{'Edit'|trans}}</a>
                {{ include('comment/_delete_form.html.twig') }}
                {% endif %}
            </div>
        </div>
    {% else %}
        <div>
           {{  'no_records_found'|trans }}
        </div>
    {% endfor %}
    <div class="nav text-center">
        {{ knp_pagination_render(comments) }}
    </div>
</div>